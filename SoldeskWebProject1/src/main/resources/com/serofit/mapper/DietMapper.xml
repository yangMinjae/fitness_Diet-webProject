<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.serofit.mapper.DietMapper">

	<!-- 식단 결과 저장하기-->
	<insert id="insertDiet" parameterType="com.serofit.domain.DietVO">
		INSERT INTO tbl_diet VALUES (
			seq_diet.nextval,
			#{uno},
			#{title},
			#{tag},
			#{content},
			sysdate
			)
	</insert>
	
	<!-- UNO로 식단 목록 불러오기 -->
	<select id="selectDietByUno" resultType="com.serofit.domain.DietVO" parameterType="int">
		SELECT * FROM tbl_diet WHERE uno=#{uno} ORDER BY REGDATE DESC
	</select>
	
	<!-- UNO로 식단 삭제 -->
	<delete id="deleteDietByUno" parameterType="int">
		DELETE tbl_diet WHERE uno=#{uno}
	</delete>	
	
	<!-- DNO로 TAG 가져오기 -->
	<select id="selectDietByDno" resultType="com.serofit.domain.DietVO" parameterType="int">
		SELECT * FROM tbl_diet WHERE dno=#{dno}
	</select>
	
	<!-- UNO로 TAG 가져오기 -->
	<select id="selectOneDietByUno" resultType="com.serofit.domain.DietVO" parameterType="int">
		SELECT * FROM tbl_diet WHERE uno=#{uno}
	</select>
</mapper>
