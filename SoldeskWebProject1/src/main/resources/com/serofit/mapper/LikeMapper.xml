<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.serofit.LikeMapper">
	<!-- 좋아요 게시글, 좋아요 한 사람 찾기 -->
	<select id="findBnobyUno" parameterType="int" resultType="com.serofit.domain.LikeVO">
		SELECT * FROM tbl_like WHERE uno=#{uno}
	</select>
	
	<select id="findUnobyBno" parameterType="int" resultType="com.serofit.domain.LikeVO">
		SELECT * FROM tbl_like WHERE bno=#{bno}
	</select>
	
	<!-- 좋아요 해제 -->
	<delete id="deleteByBnoAndUno" parameterType="com.serofit.domain.LikeVO">
		DELETE FROM tbl_like WHERE bno=#{bno} AND uno=#{uno}
	</delete>
	
	<!-- 게시글 삭제 -->
	<delete id="deleteByBno" parameterType="int">
		DELETE FROM tbl_like WHERE bno=#{bno}
	</delete>
</mapper>
