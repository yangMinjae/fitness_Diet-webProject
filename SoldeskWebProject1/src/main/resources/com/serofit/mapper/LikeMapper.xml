<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.serofit.mapper.LikeMapper">
	<!-- 좋아요 게시글 찾기 -->
	<select id="findBnoByUno" parameterType="int" resultType="com.serofit.domain.LikeVO">
		SELECT * FROM tbl_like WHERE uno=#{uno}
	</select>
	
	<!-- 좋아요 해제 -->
	<delete id="deleteByBnoAndUno" parameterType="com.serofit.domain.LikeVO">
		DELETE FROM tbl_like WHERE bno=#{bno} AND uno=#{uno}
	</delete>
	
	<!-- 좋아요 등록  -->
	<insert id="insertByBnoAndUno" parameterType="com.serofit.domain.LikeVO">
		INSERT INTO tbl_like
		VALUES(
			#{uno},
			#{bno}
		)
	</insert>
	
	<!-- 게시글 삭제 -->
	<delete id="deleteByBno" parameterType="int">
		DELETE FROM tbl_like WHERE bno=#{bno}
	</delete>
	
	<!-- 유저탈퇴 좋아요 삭제  -->
	<delete id="deleteByUno" parameterType="int">
		DELETE FROM tbl_like WHERE uno=#{uno}
	</delete>
</mapper>
