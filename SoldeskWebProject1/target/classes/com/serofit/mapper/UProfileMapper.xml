<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.serofit.mapper.UProfileMapper">
	<!-- 프로필 가져오기(UUID, 인기게시글, 프로필 이미지, 마이페이지...) -->
	<select id="selectByUno" parameterType="int" resultType="com.serofit.domain.UProfileVO">
		SELECT *
			FROM tbl_uprofile 
			WHERE uno=#{uno}
	</select>
	
	<!-- 프로필 수정 -->
	<update id="updateProfile" parameterType="com.serofit.domain.UProfileVO">
		UPDATE tbl_uprofile 
			SET self=#{self},
				fav=#{fav},
				tag=#{tag}
			WHERE uno=#{uno}	
	</update>
	
	<!-- 프로필 삭제 -->
	<delete id="deleteProfile" parameterType="int">
		DELETE FROM tbl_uprofile WHERE uno=#{uno}
	</delete>
	
	<!-- 회원 생성시 기본 프로필생성 -->
	<insert id="insertProfile" parameterType="com.serofit.domain.UProfileVO">
		INSERT INTO tbl_uprofile (
			uno, 
			uuid,
			mate
		) 
		VALUES(
			#{uno},
			#{uuid},
			default
		)
	</insert>
	
	<!-- tbl_uprofile 테이블에서 uno 일치와 mate가 1인 모든 데이터 가져오기 -->
	<select id="getUnoByMate" resultType="com.serofit.domain.UProfileVO" parameterType="int">
	SELECT * FROM tbl_uprofile WHERE uno = #{uno} AND mate = 1
	</select>
	
	<!-- 식단 완료 시 태그 부여 -->
	<update id="updateTag" parameterType="com.serofit.domain.UpdateTagDTO">
		UPDATE tbl_uprofile
			SET tag=#{tag}
			WHERE uno=#{uno}
	</update>
	
	<!-- 운동 메이트 거절 -->
	<update id="updateMateReject" parameterType="int">
		UPDATE tbl_uprofile SET mate=0 WHERE uno=#{uno}
	</update>
	
	<!-- 운동 메이트 동의 -->
	<update id="updateMateAgree" parameterType="int">
		UPDATE tbl_uprofile SET mate=1 WHERE uno=#{uno}	
	</update>
	
	<!-- uuid 수정 -->
	<update id="updateUUID">
		UPDATE tbl_uprofile 
			SET uuid = #{uuid}
			WHERE uno=#{uno}	
	</update>
	
</mapper>
