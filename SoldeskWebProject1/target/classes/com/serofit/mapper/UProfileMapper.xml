<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.serofit.UProfileMapper">
	<!-- uuid 가져오기(인기게시글,프로필 이미지,마이페이지...) -->
	<select id="selectByUno" parameterType="int" resultType="com.serofit.domain.UProfileVO">
		SELECT *
			FROM tbl_uprofile 
			WHERE uno=#{uno}
	</select>
	
	<!-- 프로필 수정 -->
	<update id="updateProfile">
		UPDATE tbl_uprofile 
			SET uuid=#{uuid},
				mate=#{mate},
				self=#{self},
				fav=#{fav}
			WHERE uno=#{uno}	
	</update>
	
	<!-- 프로필 삭제 -->
	<delete id="deleteProfile">
		DELETE tbl_uprofile FROM tbl_uprofile WHERE uno=#{uno}
	</delete>
</mapper>
